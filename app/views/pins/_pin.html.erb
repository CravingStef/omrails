<tr>
  <td><%= link_to image_tag(pin.image(:thumb)), pin %></td>
  <td><%= pin.description %></td>
  <% if current_user == pin.user %>
	  <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn" %></td>
	  <td><%= link_to 'Delete', pin, class: "btn btn-danger btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
</tr>